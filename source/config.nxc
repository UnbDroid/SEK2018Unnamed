    deleteFile(CONFIG_FILE_NAME, CONFIG_FILE_SIZE);
    deleteFile(ROUTE_FILE_NAME, ROUTE_FILE_SIZE);
    configColor(ID_VERDE);
    PlayTone(500, 500);
    configColor(ID_AZUL);
    PlayTone(500, 500);
    configColor(ID_VERMELHO);
    PlayTone(500, 500);
    configColor(ID_PRETO);
    PlayTone(500, 500);
    configColor(ID_BRANCO);
